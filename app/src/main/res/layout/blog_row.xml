<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="13dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#fff"
            android:layout_marginBottom="5dp"
            android:background="#fff"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilepicBlog"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:background="#fff"
                android:padding="6dp"
                android:src="@drawable/defimg"
                 />

            <ImageView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"

                android:src="@drawable/circular_border" />

            <TextView
                android:id="@+id/post_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="74dp"
                android:padding="14dp"
                android:text="UserName"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:background="#fff"
                />

            <ImageButton
                android:id="@+id/tools"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="37dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="18dp"
                android:src="@drawable/ic_menu"
                android:rotation="90"
                android:background="#fff"
                />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BA050C1B">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="4:3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/ic_launcher_background" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/ImageButtonView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="#fff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:background="#ffffff"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/skill_category"
                    android:src="@drawable/ic_skills"
                    android:layout_gravity="center"
                    android:paddingEnd="16dp"
                    />

            </LinearLayout>

            <ImageButton
                android:id="@+id/Rate"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:src="@drawable/ic_love_def" />

            <ImageButton
                android:id="@+id/comment"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="78dp"
                android:src="@drawable/ic_comment" />

            <ImageButton
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="135dp"
                android:src="@drawable/ic_share" />



        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                android:id="@+id/rateDetails"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:paddingLeft="23dp"
                android:text="+0"
                android:textColor="#CF390F"
                android:textSize="18sp" />



        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>